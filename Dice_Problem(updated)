from __future__ import division
import random
from collections import Counter

def simu(x):
    k = []
    for i in range(0,x):
        k.append(random.randint(1,6))
        i += 1 
    p = []
    for i in range(1,7):
        p.append(Counter(k)[i])
        i += 1
    return max(p)
    
    
q =[]    
for i in range(0,10000):
    q.append(simu(40))
    i += 1
    
print Counter(q).most_common(10)

u = {}
for i in range(0,10000):
    u.update({i:(Counter(q)[i])/10000})
    i += 1
print u
