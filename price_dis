create table orders(Deal int NOT NULL, Login int NOT NULL, Time varchar(255) NOT NULL,Type varchar(255) NOT NULL,Symbol varchar(255) NOT NULL,Volume varchar(255) NOT NULL,OpenPrice varchar(255) NOT NULL,SL varchar(255) NOT NULL,TP varchar(255) NOT NULL,CurrentPrice varchar(255) NOT NULL, Swap varchar(255) NOT NULL,Profit varchar(255) NOT NULL,Comment text NOT NULL) default charset=utf8;



